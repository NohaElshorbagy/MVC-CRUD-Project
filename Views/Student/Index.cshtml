@model IEnumerable<Student>

<!DOCTYPE html>

    <a asp-action="create" asp-controller="student" class="btn btn-primary">Create</a>
    <table class="table table-active table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>DeptName</th>
                <th>Opertions</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count() == 0)
            {
                <tr class="alert alert-danger">
                    <td colspan="6"> No Student Added Yet</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Email</td>
                        <td>@item.Department.DeptName</td>
                        <td>
                            <a asp-action="edit" asp-controller="student" asp-route-id="@item.Id" class="btn btn-outline-primary">Update</a>
                            <button onclick="fun1(@item.Id)" class="btn btn-outline-primary"> Details</button>
                            <a asp-action="delete" onclick="return confirm('are you sure ?')" asp-controller="student" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
           
        </tbody>
    </table>
    <div id="div1">

    </div>
    @section Scripts{
    <script>
        function fun1(i) {
            $("#div1").load("Student/details/" + i)
        }
    </script>
    }

